<h2><%= link_to @championship.name, @championship %> > <%= link_to 'Rounds', [@championship, :rounds] %> > Create Rounds</h2>

<%= form_for [@championship, @round] do |f| %>
<p>
    <%= f.label :date %>
    <%= f.text_field :date, :size => 10 %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :track %>
    <%= f.select :track, options_from_collection_for_select(@available_tracks, :id, :name) %>
</p>
<table>
    <thead>
        <tr>
            <th>Driver</th>
            <th>Position</th>
            <th>Total Time</th>
        </tr>
    </thead>
    <tbody>
        <% @championship.drivers.each_with_index do |driver, index| %>
            <tr>
            <%= f.fields_for 'roundPosition', :index => driver.id  do |driver_fields| %>
                <td><%= driver.name %></td>
                <td><%= driver_fields.text_field :position, :size => 3 %></td>
                <td><%= driver_fields.text_field :total_time, :size => 10 %></td>
            <% end %>
            </tr>
        <% end %>
    </tbody>
</table>

    <%= f.submit %>
<% end %>
